@model List<ContohWeb.Models.Mahasiswa>

@{
    Layout = null;

    int count = 0;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tampil Data Mahasiswa</title>
</head>
<body>
    <h2>Daftar Mahasiswa</h2>

    <table border="1">
        <tr>
            <th>No</th>
            <th>Nim</th>
            <th>Nama</th>
            <th>Email</th>
            <th>IPK</th>
        </tr>
        @foreach(var mhs in Model)
        {
            count += 1;
            <tr>
                <td>@count</td>
                <td>@mhs.Nim</td>
                <td>@mhs.Nama</td>
                <td>@mhs.Email</td>
                <td>@mhs.IPK</td>
            </tr>
        }
    </table>
</body>
</html>
